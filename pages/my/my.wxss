/* pages/my/my.wxss */
page{
  width: 100%;
  height: 100%;
  color: #4A4A4A;
  background-color: #f8f8f8;
  font-size: 28rpx;
}
view{
  box-sizing: border-box;
}
.top{
  width: 100%;
  padding: 0 5%;
  height:200rpx;
  background-color: #eeeeee;
  display: flex;
  align-items: center;
}
.top .nickName_img{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.content {
  width: 100%;
  height: 80%;
  padding: 0 5%;
}
.content_Ck{
  width: 100%;
  height: 9%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  /* background-color: #fff; */
   border-bottom: 2rpx solid #eeeeee;

}
.content_Tb{
  height: 100rpx;
  width: 100%;
  margin: 20rpx 0 20rpx;
 
  display: flex;
  justify-content: space-between;
  /* background-color: #fff; */
}
.ontent_Tb_son{
  width: 20%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.ontent_Tb_son image{
  width: 36%;
}
.content_List{
  width: 100%;
  height: 80rpx;
  border-bottom: 2rpx solid #eeeeee;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  
}
.content_List_Last{
  justify-content: space-between;
}
.fuwuTime{
  font-size: 24rpx;
  color: #9B9B9B;
}
.nickname{
  font-weight: bold;
}
.xiaotubiao{
  position: absolute;
  right: 20rpx;
  top: -10rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  color:#fff;
  background-color: #ff641a;
  font-size: 24rpx;
  text-align: center;
  line-height: 40rpx;
  z-index: 3;
}