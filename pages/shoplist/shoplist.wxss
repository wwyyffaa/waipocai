/* pages/shoplist/shoplist.wxss */
 
page {
  background: #f5f5f5;
  width: 100%;
  
 
}
view{
  box-sizing: border-box;
}

.content {
  width: 100%;
  display: flex;
  position: relative;
 
}

.content_left {
  width: 25%;
  
}

.content_left .xiaotubiao {
  position: absolute;
  right: 0;
  top: 0;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  color:#fff;
  background-color: #ff641a;
  font-size: 24rpx;
  text-align: center;
  line-height: 40rpx;
  z-index: 3;
}

.content_right {
  position: absolute;
  background-color: #fff;
  right: 0;
  top: 0;
  height: 100%;
  width: 75%;
  padding-left: 10rpx;
  box-sizing: border-box;
}
.pd{
  padding-bottom:70rpx;
}
.tuijian {
  width: 100%;
  height: 100rpx;
  color: grey;
  position: relative;
  background-color: white;
}

.tuijian .line {
  height: 2rpx;
  background-color: #ccc;
  width: 80%;
  position: absolute;
  right: 50%;
  top: 50%;
  transform: translate(50%, 50%);
}

.tuijian_text {
  background-color: white;
  width: 30%;
  position: absolute;
  font-size: 24rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  color: gray;
  z-index: 1;
  text-align: center;
}
.list_left_btn {
  position: relative;
  height: 80rpx;
  width: 100%;
  color: #b1b1b1;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
}

.list_left_btn.active {
 color: #4a4a4a;
}

/* ------- */

.shoplist_box {
  height: 140rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.shoplist_box_l {
  width: 140rpx;
  height: 140rpx;
  display: block;
  box-sizing: border-box;
   overflow: hidden; 
}
.shoplist_box_l_img{
  height: 100%;
  width: 100%;
}
.shoplist_box_r {
  width: 70%;
  height: 100%;
  color: black;
  padding: 0 5%;
}

.top {
  position: relative;
}

.top .hot {
  width: 150rpx;
  height: 50rpx;
  position: absolute;
  top: 0;
  left: 70px;
}

.top .hot image {
  width: 150rpx;
  height: 50rpx;
}

.en_text {
  font-size: 28rpx;
  color: gray;
}

.shoplist_box_r .bottom {
  margin-top: 20rpx;
  position: relative;
}

.text_1 {
  font-size: 26rpx;
  color: gray;
  margin-right: 10rpx;
  text-decoration: line-through;

}

.text_2 {
  font-size: 30rpx;
  color: red;
}

.text_3 {
  font-size: 30rpx;
  display: block;
  margin: 0 30%;

}

.bottom_son {
  position: absolute;
  width: 150rpx;
  height: 50rpx;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
 align-items: center;
}

.jian {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: -10%;
  top: 0;
}
.jian.hidden{
  display: none;
}
.text_3.hidden{
  display: none;
}
.jia {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: -10%;
  top: 0;
  z-index: 10;
}

.jian_jia {
  width: 50rpx;
  height: 50rpx;
  
}
.ch_text{
  font-size: 28rpx;
}
/*结算栏开始  */
.jiesuan{
  width: 100%;
  padding-left:30%; 
  height: 70rpx;
  background-color: #f8f8f8;
  position: fixed;
  border-top: 2rpx #eeeeee solid;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center; 
  z-index: 30;
  justify-content: space-between;
}

.jiesuan text{
  color: #4a4a4a;
  font-size: 28rpx;
}
.jiesuan .jiesuan_but{
  width: 30%;
  height: 100%;
  background-color: #ff641a;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
 
 
}
.jiesuan .jiagezonghe {
  color: red;
  font-weight: bold;
  font: 32rpx;
}
/*结算栏结束  */
